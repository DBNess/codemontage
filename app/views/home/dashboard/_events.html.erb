<div id="events" class="index radius panel row">
  <h3>Upcoming Events</h3>
  
  <div id="coder_day">
    <%= link_to image_tag('coder_day_badge_logo.png', :height => "300px"), coder_day_path %>
    <div>
      <ul>
        <li><%= link_to '<i class="social foundicon-chat"></i> '.html_safe + " Chat", 'http://tlk.io/codemontage', :target => '_blank' %></li>
        <li><%= link_to '<i class="general foundicon-clock"></i> '.html_safe + " Schedule", coder_day_path, :target => '_blank' %></li>
        <li><%= link_to '<i class="general foundicon-globe"></i> '.html_safe + " Map (NYC)", coder_day_path, :target => '_blank' %></li>
        <li><%= link_to '<i class="social foundicon-twitter"></i> '.html_safe + " #CoderDay", 'http://twitter.com/#coderday', :target => '_blank' %></li>
        <li><%= link_to '<i class="social foundicon-twitter"></i> '.html_safe + " @CodeMontage", 'http://twitter.com/CodeMontage', :target => '_blank' %></li>
      </ul>
    </div>
    <div class="eight columns centered">
    <span class="registration">
      <% if @events.present? %>
        <p><i class="general foundicon-checkmark"></i> Registered<p>
      <% else %>
      <%= button_to "Register", events_path(:short_code => "CDOS201401"), :remote => :true, :class => "radius button" %>
      <% end %>
    </span>
    </div>
  </div>
</div>
